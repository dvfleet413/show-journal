<h1>New User</h1>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :username %><br />
    <%= f.label :email %>
    <%= f.text_field :email %><br />
    <%= f.label :password %>
    <%= f.password_field :password %><br />
    <%= f.label :password_confirmaton %>
    <%= f.password_field :password_confirmation %><br />

    <%= f.submit "Create Account"%>

<% end %>