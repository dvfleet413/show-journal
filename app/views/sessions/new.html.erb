

<div class='container'>
    <div class='form'>
        <h1>Log In</h1>
        <%= form_for :user do |f| %>
            <%= f.label :name %>
            <%= f.text_field :username%><br />
            <%= f.label :password %>
            <%= f.password_field :password %><br />

            <%= f.submit "Sign In", class: "btn btn-dark" %>
        <% end %>
    </div>
</div>

<br />

